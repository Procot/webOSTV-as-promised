{
  "name": "webostv-as-promised",
  "version": "1.1.1",
  "description": "Wrapper library webOSTV.js on Promise",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "prebuild": "npm run clear",
    "test": "npm run lint && npm run unit",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "unit": "mocha -r ts-node/register/transpile-only tests/**/*.spec.ts",
    "prepublishOnly": "npm run test && npm run build",
    "clear": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/procot/webos-as-promised.git"
  },
  "keywords": [
    "Promise",
    "webOSTV.js",
    "webOS",
    "webOSDev"
  ],
  "author": {
    "name": "Ilya Istomin",
    "email": "ilyaistomin9817@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/procot/webos-as-promised/issues"
  },
  "homepage": "https://github.com/procot/webos-as-promised#readme",
  "devDependencies": {
    "@procot/webostv": "^1.2.3",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "eslint-plugin-autofix": "^1.0.3",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "esm": "^3.2.25",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^10.2.0",
    "sinon": "^9.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
